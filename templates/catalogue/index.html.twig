{% extends 'layouts/base.html.twig' %}

{% block title %}Catalogue Items{% endblock %}

{% block content %}
    <div class="container">
        <h1>Catalog List</h1>
        <a href="{{ path('catalogue_create') }}" class="btn btn-success btn-sm">Add New Item</a>
        <div class="row">
            <div class="col-lg-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Identification Code</th>
                            <th>Name</th>
                            <th>Cost Â£</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in catalogueItems %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ item.identificationCode }}</td>
                                <td>{{ item.name }}</td>
                                <td>{{ item.cost|number_format(2, '.', ',') }}</td>
                                <td>
                                    <div class="d-flex justify-content-start">
                                        <a href="{{ path('catalogue_edit', {'id': item.id}) }}" class="btn btn-primary me-1 btn-sm">Edit</a>
                                        <form action="{{ path('catalogue_delete', {'id': item.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?')">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}