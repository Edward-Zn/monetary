{% extends 'layouts/base.html.twig' %}

{% block title %}Edit Catalogue Item{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mb-4">Edit {{ catalogueItem.name }}</h1>

        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name, 'Item Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.cost, 'Cost (format: Xp Ys Zd)', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.cost, {'attr': {'class': 'form-control'}, 'value': form.cost.vars.value|format_cost}) }}
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('catalogue_list') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
{% endblock %}